00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000024Aktivitätenliste A4 quer0000041023000004true000004true00000100000010000039Liste der Aktivitäten im Format A4 quer004052'-----------------------------------------------------------------------------------------'' Formular : Liste der Aktivitäten im Format A4 quer' Historie : 21/11/2017: sts Initialversion' Geändert :'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Liste der Aktivitäten "' ********************************************************************************' Über die folgenden Konstanten lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 8 Spaltendim anzahlSpalten as number = 8dim s1 as number = 0                ' Anfang Spalte Datumdim s2 as number = 160              ' Anfang Spalte Adresse (Matchcode)dim s3 as number = 640              ' Anfang Spalte Ansprechpartnerdim s4 as number = 900              ' Anfang Spalte Projektdim s5 as number = 1150             ' Anfang Spalte Artdim s6 as number = 1360             ' Anfang Spalte Betreffdim s7 as number = 1700             ' Anfang Spalte Bearbeiterdim s8 as number = 2000             ' Anfang Spalte Beschreibungdim s9 as number = LAYOUTWIDTH#include "TEMPLATE Table"'-----------------------------------------------------------------------------------------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(AKT_Filter, 0, 150, LAYOUTWIDTH, 100)'-----------------------------------------------------------------------------------------#BeginFooter#include "TEMPLATE BeginFooter A4"'-----------------------------------------------------------------------------------------' Beginn der Tabelle 'Aktivitätenliste''-----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Aktivitätenliste")DrawLine(s1, 0, s9, 0)DrawVerticalLine(s1)DrawText("Datum", s1, 5, b1, 40)DrawVerticalLine(s2)DrawText("Adresse", s2, 5, b2, 40)DrawVerticalLine(s3)DrawText("Ansprechpartner", l3, 5, b3, 40)DrawVerticalLine(s4)DrawText("Projekt", l4, 5, b4, 40)DrawVerticalLine(s5)DrawText("Art", l5, 5, b5, 40)DrawVerticalLine(s6)DrawText("Betreff", l6, 5, b6, 40)DrawVerticalLine(s7)DrawText("Bearbeiter", l7, 5, b7, 40)DrawVerticalLine(s8)DrawText("Beschreibung", l8, 5, b8, 40)DrawVerticalLine(s9)'-----------------------------------------------------------------------------------------#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s9, 0)DrawVerticalLine(s1)DrawText(IfThen(GetPlatform = 1, MediumDate(AKT_Datum), ShortDate(AKT_Datum)), l1, 5, b1, 40)DrawVerticalLine(s2)DrawText(AKT_AdrMatchcode, l2, 5, b2, 40)DrawVerticalLine(s3)DrawText(AKT_Ansprechpartner, l3, 5, b3, 40)DrawVerticalLine(s4)DrawText(AKT_Projekt, l4, 5, b4, 40)DrawVerticalLine(s5)DrawText(AKT_Art, l5, 5, b5, 40)DrawVerticalLine(s6)DrawText(AKT_Betreff, l6, 5, b6, 40)DrawVerticalLine(s7)DrawText(AKT_Bearbeiter, l7, 5, b7, 40)DrawVerticalLine(s8)DrawText(AKT_Beschreibung, l8, 5, b8, 40)DrawVerticalLine(s9)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s9, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s9, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Aktivitätenliste'' -----------------------------------------------------------------------------------------0000012