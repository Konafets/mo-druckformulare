UTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'OP-Zahlungen Kreditoren'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("OP-Zahlungen Kreditoren")DrawLine(s1, 0, s12, 0)DrawVerticalLine(s1)DrawText("Datum", s1, 5, s2-s1, 40)DrawVerticalLine(s2)DrawText("Kreditor", l2-5, 5, b2+10, 40)DrawVerticalLine(s3)DrawText("Kred.-K.", l3, 5, b3, 40)DrawVerticalLine(s4)DrawText("Re.-Nr.", l4, 5, b4, 40)DrawVerticalLine(s5)DrawText("Währ  ung", l5, 5, b5, 300)DrawVerticalLine(s6)DrawText("Kurs", l6, 5, b6, 40)DrawVerticalLine(s7)DrawText("Zahlungsart", l7, 5, b7, 40)DrawVerticalLine(s8)DrawText("Gesamt SW", l8, 5, b8, 40)DrawVerticalLine(s9)DrawText("Minderung SW", l9, 5, b9, 40)DrawVerticalLine(s10)DrawText("Gesamt FW", l10, 5, b10, 40)DrawVerticalLine(s11)DrawText("Minderung FW", l11, 5, b11, 40)DrawVerticalLine(s12)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s12, 0)DrawVerticalLine(s1)DrawText(DateToText(KZ_Datum), l1, 5, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(KZ_AdrMatchcode, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(Format(KZ_Personenkonto, FORMATKONTO), l3, 5, b3, 40, ALIGN_RIGHT)DrawVerticalLine(s4)DrawText(KZ_RechnNr, l4, 5, b4, 300, ALIGN_LEFT)DrawVerticalLine(s5)DrawText(KZ_Waehrung, l5, 5, b5, 40, ALIGN_CENTER)DrawVerticalLine(s6)DrawText(Format(KZ_Kurs, FORMATKURSNULL), l6, 5, b6, 40, ALIGN_RIGHT)DrawVerticalLine(s7)if(KZ_Zahlungsart = KZ_Zahlart_Keine)DrawText("Keine", l7, 5, b7, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Bar)DrawText("Bar", l7, 5, b7, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Lastschrift)DrawText("Lastschrift", l7, 5, b7, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Kreditkarte)DrawText("Kreditkarte", l7, 5, b7, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Ueberweisung)DrawText("Überweisung", l7, 5, b7, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Scheck)DrawText("Scheck", l7, 5, b7, 40, ALIGN_CENTER)endifDrawVerticalLine(s8)DrawText(Format(KZ_GesamtZahlSW, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)DrawVerticalLine(s9)DrawText(Format(KZ_GesamtMindSW, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(IfThen(KZ_Waehrung<>App_GJWaehrung, KZ_GesamtZahlFW, 0), FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)DrawText(Format(IfThen(KZ_Waehrung<>App_GJWaehrung, KZ_GesamtMindFW, 0), FORMATBETRAGLEER), l11, 5, b11, 40, ALIGN_RIGHT)DrawVerticalLine(s12)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s12, 0)#BeginTableFooter#include "STYLE Arial 8, fett"SetArea(42)DrawLine(s1, 0, s12, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'OP-Zahlungen Kreditoren'' -----------------------------------------------------------------------------------------0000012