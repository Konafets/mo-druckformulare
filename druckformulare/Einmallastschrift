e)'--------------- normal----------------------------------DrawText("Ich ermächtige die " + Firma_Name + ", einmalig eine Zahlung von meinem Konto mittels Lastschrift einzuziehen. Zugleich weise ich mein Kreditinstitut an, die von der " + Firma_Name + " auf mein Konto gezogene Lastschrift einzulösen.", 0, 430, 1800, 200)if (Mandat_Art = MANDAT_ART_BASISLASTSCHRIFT)DrawText("Hinweis: Ich kann innerhalb von acht Wochen, beginnend mit dem Belastungsdatum, die Erstattung des belasteten Betrages verlangen. Es gelten dabei die mit meinem Kreditinstitut vereinbarten Bedingungen.", 0, 550, 1800, 200)endifif (Adr_Bank_Kontoinhaber = "")if (Adr_Firma1 = "")DrawText(Adr_Vorname + " " + Adr_Nachname, 0, 850, 800, 50)elseDrawText(Adr_Firma1, 0, 850, 800, 50)endifelseDrawText(Adr_Bank_Kontoinhaber, 0, 850, 800, 50)endifDrawLine(0, 900, 800, 900)DrawText("Vorname und Name (Kontoinhaber)", 0, 920, 800, 50)DrawText(Adr_Strasse + " " + Adr_HausNr, 0, 1000, 800, 50)DrawLine(0, 1050, 800, 1050)DrawText("Straße und Hausnummer", 0, 1070, 800, 50)DrawText(Adr_PLZ + " " + Adr_Ort, 0, 1150, 800, 50)DrawLine(0, 1200, 800, 1200)DrawText("Postleitzahl und Ort", 0, 1220, 800, 50)DrawText(Adr_Bank_Name + " " + Adr_Bank_BIC_Digital, 0, 1300, 800, 50)DrawLine(0, 1350, 800, 1350)DrawText("Kreditinstitut (Name und BIC)", 0, 1370, 800, 50)DrawText(Adr_Bank_IBAN_Digital, 0, 1450, 800, 50)DrawLine(0, 1500, 800, 1500)DrawText("IBAN", 0, 1520, 800, 50)DrawLine(0, 1750, 800, 1750)DrawText("Datum, Ort und Unterschrift", 0, 1770, 800, 50)0000011