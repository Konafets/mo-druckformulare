00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000023Artikelinventur A4 hoch0000043008000004true000004true00000100000010000043Liste der Artikelinventur im Format A4 hoch005523' -----------------------------------------------------------------------------------------'' Formular : Artikelinventur im Format A4 quer' Historie : 08/05/2018: Initialversion AS'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Inventur-Artikelliste"' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************const LAYOUTLEFT  as number = 100' Variablen definierendim row           as number = 0dim top           as number = 9dim hoehe         as numberdim breite        as numberdim links1        as numberdim links2        as numberdim links3        as numberdim links4        as numberdim zab           as number' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 hoch"' Variablen für die Positionen der 7 Spaltendim anzahlSpalten as number = 7dim s1 as number = 0dim s2 as number = 250dim s3 as number = 430dim s4 as number = 1010dim s5 as number = 1190dim s6 as number = 1510dim s7 as number = 1630dim s8 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"#BeginGraphicsTextSetArea(200)#include "STYLE Arial 8, fett"set hoehe to 0set zab to 45set links1 to LAYOUTLEFTset links2 to links1 + 280set breite to 700DrawText("Inventur-Nr.:", links1, hoehe, links2 - links1, 50)DrawText(INVENTUR_BELEGNR, links2, hoehe, breite, 50)set hoehe to hoehe + zabDrawText("Bezeichnung:", links1, hoehe, links2 - links1, 50)DrawText(INVENTUR_BEZEICHNUNG, links2, hoehe, breite, 50)set hoehe to hoehe + zabDrawText("Inventurart:", links1, hoehe, links2 - links1, 50)DrawText(INVENTUR_ART, links2, hoehe, breite, 50)set hoehe to 0set links1 to links2 + breite + 20set links2 to links1 + 280set breite to PAGE_WIDTH - links2DrawText("Verantwortlicher:", links1, hoehe, links2 - links1, 50)DrawText(INVENTUR_BEARBEITER, links2, hoehe, breite, 50)set hoehe to hoehe + zabDrawText("Zähler:", links1, hoehe, links2 - links1, 50)DrawText(ART_FIRST_ZAEHLER, links2, hoehe, breite, 50)set hoehe to hoehe + zabDrawText("Schreiber:", links1, hoehe, links2 - links1, 50)DrawText(ART_FIRST_SCHREIBER, links2, hoehe, breite, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Artikelliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"DrawLine(s1, 0, s8, 0)DrawVerticalLine(s1)DrawText("Art.-Nr.", l1, top, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Lager", l2, top, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Bezeichnung", l3, top, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Einheit", l4, top, b4, 80, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("EAN-Code", l5, top, b5, 80, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Soll", l6, top, b6, 80, ALIGN_CENTER)DrawVerticalLine(s7)DrawText("Ist", l7, top, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)SetCurrentTable("Artikelliste")'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawVerticalLine(s1)DrawLine(s1, 0, s8, 0)DrawText(ART_Artikelnummer, l1, top, b1, 160, ALIGN_LEFT)DrawVerticalLine(s2)DrawText(ART_Lager, l2, top, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(ART_Bezeichnung, l3, top, b3, 300, ALIGN_LEFT)DrawVerticalLine(s4)DrawText(ART_Einheit, l4, top, b4, 160, ALIGN_CENTER)DrawVerticalLine(s5)DrawText(ART_EAN_Code, l5, top, b5, 160, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(ART_SollBestand, l6, top, b6, 300, ALIGN_RIGHT)DrawVerticalLine(s7)DrawText(ART_IstBestand, l7, top, b7, 300, ALIGN_RIGHT)DrawVerticalLine(s8)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s8, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s8, 0)#BeginGraphicsTextSetArea(150, AREA_AUTOSIZE)#include "STYLE Arial 9, normal"set hoehe to 150set links1 to 0set breite to 400DrawText("Datum:", links1, hoehe, 120, 50)DrawLine(links1 + 120, hoehe + 30, links1 + breite, hoehe + 30)set links1 to links1 + 520set breite to 500DrawText("Name:", links1, hoehe, 100, 50)DrawLine(links1 + 110, hoehe + 30, links1 + breite, hoehe + 30)set links1 to links1 + 620set breite to 600DrawText("Unterschrift:", links1, hoehe, 190, 50)DrawLine(links1 + 190, hoehe + 30, links1 + breite, hoehe + 30)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Buchungsliste'' -----------------------------------------------------------------------------------------0000011