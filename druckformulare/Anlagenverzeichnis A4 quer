BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Anlagen'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(100)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Anlagen")DrawLine(s1, 0, s14, 0)DrawVerticalLine(s1)DrawText("Inventar-", s1, 5, b1, 80)DrawText("nummer", s1, 35, b1, 80)DrawVerticalLine(s2)DrawText("Bezeichnung", l2-5, 5, b2, 40)DrawVerticalLine(s3)DrawText("Standort", l3-5, 5, b3, 40)DrawVerticalLine(s4)DrawText("Serien-", l4, 5, b4, 80)DrawText("nummer", l4, 35, b4, 80)DrawVerticalLine(s5)DrawText("Kosten-", l5, 5, b5, 80)DrawText("stelle", l5, 35, b5, 80)DrawVerticalLine(s6)DrawText("Anlagen-", l6, 5, b6, 80)DrawText("konto", l6, 35, b6, 80)DrawVerticalLine(s7)DrawText("Afa-", l7, 5, b7, 80)DrawText("konto", l7, 35, b7, 80)DrawVerticalLine(s8)DrawText("Zugangs-", l8, 5, b8, 80)DrawText("datum", l8, 35, b8, 80)DrawVerticalLine(s9)DrawText("Hist. AHK", l9, 5, b9, 80)DrawText("in Euro", l9, 35, b9, 80)DrawVerticalLine(s10)DrawText("ND in", l10, 5, b10, 80)DrawText("Monaten", l10, 35, b10, 80)DrawVerticalLine(s11)DrawText("Buchwert", l11, 5, b11, 80)DrawText("in Euro", l11, 35, b11, 80)DrawVerticalLine(s12)DrawText("Afa-Me-", l12, 5, b12, 80)DrawText("thode", l12, 35, b12, 80)DrawVerticalLine(s13)DrawText("Abgangs-", l13, 5, b13, 80)DrawText("datum", l13, 35, b13, 80)DrawVerticalLine(s14)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (not ANL_AnlagenPosition)if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s14, 0)DrawVerticalLine(s1)DrawText(ANL_SD_InventarNr, l1, 5, b1, 70)DrawVerticalLine(s2)DrawText(ANL_SD_Bezeichnung, l2, 5, b2, 300)DrawVerticalLine(s3)DrawText(ANL_SD_Standort, l3, 5, b3, 300)DrawVerticalLine(s4)DrawText(ANL_SD_SerienNr, l4, 5, b4, 70)DrawVerticalLine(s5)DrawText(ANL_SD_Kostenstelle, l5, 5, b5, 70)DrawVerticalLine(s6)DrawText(Format(ANL_SD_KontoAnlage, FORMATKONTOLEER), l6, 5, b6, 40)DrawVerticalLine(s7)DrawText(Format(ANL_SD_KontoAfa, FORMATKONTOLEER), l7, 5, b7, 40)DrawVerticalLine(s8)DrawText(DateToText(ANL_ZU_Datum), l8, 5, b8, 70, ALIGN_CENTER)DrawVerticalLine(s9)DrawText(Format(ANL_JahrHistAHK, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(ANL_ZU_Nutzungsdauer, "0"), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)DrawText(Format(ANL_JahrBuchwertEnde, FORMATBETRAGLEER), l11, 5, b11, 40, ALIGN_RIGHT)DrawVerticalLine(s12)if(ANL_ZU_AfaMethode = ANL_AFAART_KEINE)DrawText("", l12, 5, b12, 40, ALIGN_CENTER)elseif(ANL_ZU_AfaMethode = ANL_AFAART_LINEAR)DrawText("LIN", l12, 5, b12, 40, ALIGN_CENTER)elseif(ANL_ZU_AfaMethode = ANL_AFAART_DEGRESSIV)if (ANL_ZU_AfaWechsel)DrawText("D/L", l12, 5, b12, 40, ALIGN_CENTER)elseDrawText("DEG", l12, 5, b12, 40, ALIGN_CENTER)endifelseif(ANL_ZU_AfaMethode = ANL_AFAART_GWG)DrawText("GWG", l12, 5, b12, 40, ALIGN_CENTER)elseif(ANL_ZU_AfaMethode = ANL_AFAART_GWG_SP)DrawText("GWG-SP", l12, 5, b12, 40, ALIGN_CENTER)elseDrawText("#WERT!", l12, 5, b12, 40, ALIGN_CENTER)endifDrawVerticalLine(s13)DrawText(IfThen(DateToNumber(ANL_AB_Datum)=0, "", DateToText(ANL_AB_Datum)), l13, 5, b13, 70, ALIGN_CENTER)DrawVerticalLine(s14)endif'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s14, 0)#BeginTableFooterSetArea(42)DrawLine(s1, 0, s14, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Anlagen'' ----------------------------------------------------------------------------------------