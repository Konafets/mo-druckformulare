(890, 250, 910, 250)DrawLine(910, 250, 910, 270)DrawLine(90, 650, 110, 650)DrawLine(90, 630, 90, 650)DrawLine(890, 650, 910, 650)DrawLine(910, 630, 910, 650)'-------------------------------------------------------------DrawRect(1000, 440, 740, 80)DrawRect(1000, 610, 450, 75)DrawRect(70, 1050, s7-70, 60)'---------------------fett------------------------------------SetTextBold(true)SetTextSize(16)DrawText(jahr, 1700, 0, 150, 70, ALIGN_RIGHT)SetTextSize(11)SetTextBold(true)DrawText("Umsatzsteuer-Voranmeldung " + jahr, 1010, 455, 720, 50, ALIGN_CENTER)DrawText("Übersicht zu den Kennzahlen der Umsatzsteuer-Voranmeldung", l1, 1060, s7 - s1 - 20, 50)SetTextSize(10)DrawText("Finanzamt", 120, 320, 180, 50)SetTextSize(8)DrawText("Voranmeldungszeitraum", 1020, 565, 600, 40)'---------------nicht fett------------------------------------SetTextBold(false)'-------------Adressfenster Finanzamt-------------------------SetTextSize(10)DrawText(Firma_FAName, 120, 380, 800, 50)if(Firma_FAZusatz = "")DrawText(Firma_FAStrasse, 120, 430, 800, 50)DrawText(Firma_FAPlz, 120, 480, 150, 50)DrawText(Firma_FAOrt, 270, 480, 650, 50)elseDrawText(Firma_FAZusatz,  120, 430, 800, 50)DrawText(Firma_FAStrasse, 120, 480, 800, 50)DrawText(Firma_FAPlz, 120, 530, 150, 50)DrawText(Firma_FAOrt, 270, 530, 650, 50)endif'-------------------------------------------------------------DrawText(UVA_Zeitraum, 1000, 630, 450, 50, ALIGN_CENTER)'-------------Adressfenster Unternehmen-----------------------DrawText(Firma_Name, 120, 760, 800, 50)if(Firma_Zusatz = "")DrawText(Firma_Strasse, 120, 810, 800, 50)DrawText(Firma_Plz, 120, 870, 150, 50)DrawText(Firma_Ort, 270, 870, 650, 50)DrawText(Firma_Telefon, 120, 920, 650, 50)elseDrawText(Firma_Zusatz,  120, 810, 800, 50)DrawText(Firma_Strasse, 120, 860, 800, 50)DrawText(Firma_Plz, 120, 920, 150, 50)DrawText(Firma_Ort, 270, 920, 650, 50)DrawText(Firma_Telefon, 120, 970, 650, 50)endif'------------nicht fett geschrieben------------------------------SetTextBold(false)SetTextSize(11)DrawText("Steuernummer:", 85, 20, 300, 50)DrawText(Firma_FASteuernummer, 390, 20, 300, 50)#BeginTableHeaderif ( HasTable("Steueranmeldungen") )SetArea(120)#include "STYLE Arial 8, normal"SetTextBold(true)DrawText("Zeile", l1, 40, b1, 40, ALIGN_LEFT)DrawText("KZ", l3, 40, b3, 40, ALIGN_CENTER)DrawText("Bemessungsgrundlage", l4, 40, b4, 40, ALIGN_CENTER)DrawText("EUR, Ct", l4, 80, b4, 40, ALIGN_CENTER)DrawText("KZ", l5, 40, b5, 40, ALIGN_CENTER)DrawText("Steuer", l6, 40, b6, 40, ALIGN_CENTER)DrawText("EUR, Ct", l6, 80, b6, 40, ALIGN_CENTER)' Vertikale LinienDrawLine(s1, 20, s1, 120)DrawLine(s7, 20, s7, 120)' Horizontale LinienDrawLine(s1, 20, s7, 20)DrawLine(s1, 120, s7, 120)SetCurrentTable("Steueranmeldungen")endif#BeginTableRowif ( HasTable("Steueranmeldungen") )SetArea(200, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"set hoehe to 20DrawText(Format(Zeile, "00"), l1, hoehe, b1, 40, ALIGN_LEFT)DrawText(Beschreibung, l2, hoehe, b2, 40)DrawText(Kz1, l3, hoehe, b3, 40, ALIGN_RIGHT)DrawText(Format(Grundlage, FORMATBETRAGLEER), l4, hoehe, b4, 40, ALIGN_RIGHT)DrawText(Kz2, l5, hoehe, b5, 40, ALIGN_RIGHT)DrawText(Format(Steuer, FORMATBETRAGLEER), l6, hoehe, b6, 40, ALIGN_RIGHT)DrawVerticalLine(s1)DrawVerticalLine(s2)DrawVerticalLine(s3)DrawVerticalLine(s4)DrawVerticalLine(s5)DrawVerticalLine(s6)DrawVerticalLine(s7)endif#BeginTableBreakif ( HasTable("Steueranmeldungen") )SetArea(40)#include "STYLE Arial 8, normal"DrawLine(s1, 0, s7, 0)endif#BeginTableFooterif ( HasTable("Steueranmeldungen") )SetArea(40)#include "STYLE Arial 8, normal"DrawLine(s1, 0, s7, 0)endif0000011