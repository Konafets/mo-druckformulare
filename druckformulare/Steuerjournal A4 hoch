, 5, b2+20, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Buchungstext", l3, 5, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Konto", l4, 5, b4, 40, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("Gegen- konto", l5, 5, b5, 80, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Betrag", l6, 5, s8-s6, 40, ALIGN_CENTER)DrawText("Soll", l6, 45, b6, 40, ALIGN_CENTER)DrawText("Haben", l7, 45, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)DrawText("Steuersatz", l8, 5, b8, 80, ALIGN_CENTER)DrawVerticalLine(s9)DrawText("Bemes- sung", l9, 5, b9, 80, ALIGN_CENTER)DrawVerticalLine(s10)DrawText("Steuer", l10, 5, b10, 40, ALIGN_CENTER)DrawVerticalLine(s11)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if(UJ_NeueBuchung)DrawLine(s1, 0, s11, 0)endifif(UJ_Summenzeile)DrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawVerticalLine(s4)SetTextBold(true)DrawText(UJ_Text, l4, 5, s10-s4-20, 300)DrawVerticalLine(s9)DrawText(Format(UJ_Bemessung, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(UJ_Steuer, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)elseDrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawText(DateToText(UJ_Datum), l1, 5, b1, 35, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(UJ_BelegNr, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(UJ_Text, l3, 5, b3, 300)DrawVerticalLine(s4)DrawText(UJ_Konto, l4, 5, b4, 40, ALIGN_RIGHT)DrawVerticalLine(s5)DrawText(UJ_Gegenkonto, l5, 5, b5, 40, ALIGN_RIGHT)DrawVerticalLine(s6)DrawText(Format(UJ_BetragSoll, FORMATBETRAGLEER), l6, 5, b6, 40, ALIGN_RIGHT)DrawVerticalLine(s7)DrawText(Format(UJ_BetragHaben, FORMATBETRAGLEER), l7, 5, b7, 40, ALIGN_RIGHT)DrawVerticalLine(s8)DrawText(UJ_Steuersatz, l8, 5, b8, 160, ALIGN_CENTER)DrawVerticalLine(s9)DrawText(Format(UJ_Bemessung, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(UJ_Steuer, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)endif'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(11)DrawLine(s1, 0, s11, 0)#BeginTableFooterSetArea(11)DrawLine(s1, 0, s11, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Umsatzsteuer-Journal'' -----------------------------------------------------------------------------------------0000011