-----------------------------------' Beginn der Tabelle 'Buchungsliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Kontenplan")DrawLine(s1, 0, s12, 0)DrawVerticalLine(s1)DrawText("Konto", s1, 5, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Bezeichnung", l2, 5, b2, 160, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Typ", l3, 5, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Steuer-typ", l4, 5, b4, 80, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("Steuersatz", l5, 5, b5, 80, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Bemerkung", l6, 5, b6, 40, ALIGN_CENTER)DrawVerticalLine(s7)DrawText("Sperre", l7, 5, b7, 80, ALIGN_CENTER)DrawVerticalLine(s8)DrawText("UVA-Kennzeichen", l8, 5, b8, 80, ALIGN_CENTER)DrawVerticalLine(s9)DrawText("DTVKonto", l9, 5, b9, 80, ALIGN_CENTER)DrawVerticalLine(s10)DrawText("DTV-Auto", l10, 5, b10, 80, ALIGN_CENTER)DrawVerticalLine(s11)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawVerticalLine(s1)DrawLine(s1, 0, s12, 0)DrawText(Format(KP_Konto, FORMATKONTO), l1, 5, b1, 40, ALIGN_RIGHT)DrawVerticalLine(s2)DrawText(KP_Bezeichnung, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(KP_Typ, l3, 5, b3, 160, ALIGN_LEFT)DrawVerticalLine(s4)DrawText(KP_Steuertyp, l4, 5, b4, 160, ALIGN_CENTER)DrawVerticalLine(s5)DrawText(KP_Steuersatz, l5, 5, b5, 160, ALIGN_CENTER)DrawVerticalLine(s6)DrawText(KP_Bemerkung, l6, 5, b6, 300, ALIGN_LEFT)DrawVerticalLine(s7)DrawText(IfThen(KP_Buchungssperre, "Ja", ""), l7, 5, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)DrawText(KP_UVAKennzeichen, l8, 5, b8, 40, ALIGN_CENTER)DrawVerticalLine(s9)DrawText(Format(KP_DATEVKonto, FORMATKONTOLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(IfThen(KP_DATEVAutomatik, "Ja", ""), l10, 5, b10, 40, ALIGN_CENTER)DrawVerticalLine(s11)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s12, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s12, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Buchungsliste'' -----------------------------------------------------------------------------------------0000012