00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000020Bestellliste A4 quer0000041015000004true000004true00000100000010000000005636' -----------------------------------------------------------------------------------------'' Formular : Bestellliste im Format A4 quer' Historie : 14.01.2011: Initialversion sts' Geändert : 23.05.2013: sts (Spaltenbreite für Datum an langes Datumsformat angepasst)'            28.02.2014: sts (Ausgabe der Belegart in Spalte Art korrigiert)'            11.10.2016: sts (Ausgabe Lieferdatum nur wenn vorhanden)' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Bestellliste in " + App_GJWaehrung' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************const BESTELLART_ANFRAGE        as number = 101const BESTELLART_BESTELLUNG     as number = 102const BESTELLART_WARENEINGANG   as number = 103const BESTELLART_RECHNUNG       as number = 104const BESTELLART_GUTSCHRIFT     as number = 105const BESTELLART_RUECKSENDUNG   as number = 106const BESTELLART_STORNO         as number = 107' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 13 Spaltendim anzahlSpalten as number = 13dim s1 as number = 0dim s2 as number = 80dim s3 as number = 160dim s4 as number = 370dim s5 as number = 540dim s6 as number = 710dim s7 as number = 1010dim s8 as number = 1220dim s9 as number = 1430dim s10 as number = 1640dim s11 as number = 1850dim s12 as number = 2060dim s13 as number = 2260dim s14 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(BESTELL_Filter, 0, 150, LAYOUTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Auftragsliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Bestellliste")DrawLine(s1, 0, s14, 0)DrawVerticalLine(s1)DrawText("Art", s1, 5, b1, 40)DrawVerticalLine(s2)DrawText("Ent-", l2, 5, b2, 40)DrawText("wurf", l2, 35, b2, 40)DrawVerticalLine(s3)DrawText("BestellNr", l3, 5, b3, 40)DrawVerticalLine(s4)DrawText("Datum", l4, 5, b4, 40)DrawVerticalLine(s5)DrawText("L-Datum", l5, 5, b5, 40)DrawVerticalLine(s6)DrawText("Empfänger", l6, 5, b6, 40)DrawVerticalLine(s7)DrawText("Zahlungs-", l7, 5, b7, 40)DrawText("bedingung", l7, 35, b7, 40)DrawVerticalLine(s8)DrawText("PosNetto", l8, 5, b8, 40)DrawVerticalLine(s9)DrawText("Rabatt", l9, 5, b9, 40)DrawVerticalLine(s10)DrawText("Netto", l10, 5, b10, 40)DrawVerticalLine(s11)DrawText("Steuer", l11, 5, b11, 40)DrawVerticalLine(s12)DrawText("Brutto", l12, 5, b12, 40)DrawVerticalLine(s13)DrawText("Notiz", l13, 5, b13, 40)DrawVerticalLine(s14)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s14, 0)DrawVerticalLine(s1)DrawText(Choose(BESTELL_Art - 101, "BA", "BE", "WE", "ER", "LG", "RS", "ES", ""), l1, 5, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(IfThen(BESTELL_Entwurf, "Ja", ""), l2, 5, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText(BESTELL_bestellNr, l3, 5, b3, 300)DrawVerticalLine(s4)DrawText(DateToText(BESTELL_Datum), l4, 5, b4, 300, ALIGN_CENTER)DrawVerticalLine(s5)DrawText(IfThen(DateToNumber(BESTELL_LieferDatum) > 0, DateToText(BESTELL_LieferDatum), ""), l5, 5, b5, 300, ALIGN_CENTER)DrawVerticalLine(s6)DrawText(BESTELL_Matchcode, l6, 5, b6, 300)DrawVerticalLine(s7)DrawText(BESTELL_Zahlungsbedingung, l7, 5, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)DrawText(Format(BESTELL_PosGesamtPreisNettoSW, FORMATBETRAGNULL), l8, 5, b8, 40, ALIGN_RIGHT)DrawVerticalLine(s9)DrawText(Format(BESTELL_GesamtRabattSW, FORMATBETRAGNULL), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(BESTELL_GesamtPreisNettoSW, FORMATBETRAGNULL), l10, 5, b10, 80, ALIGN_RIGHT)DrawVerticalLine(s11)DrawText(Format(BESTELL_GesamtSteuerSW, FORMATBETRAGNULL), l11, 5, b11, 300, ALIGN_RIGHT)DrawVerticalLine(s12)DrawText(Format(BESTELL_GesamtPreisBruttoSW, FORMATBETRAGNULL), l12, 5, b12, 40, ALIGN_RIGHT)DrawVerticalLine(s13)DrawText(BESTELL_Notizen, l13, 5, b13, 300)DrawVerticalLine(s14)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s14, 0)#BeginTableFooter#include "STYLE Arial 8, fett"SetArea(42)DrawLine(s1, 0, s14, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Bestellliste'' -----------------------------------------------------------------------------------------0000012