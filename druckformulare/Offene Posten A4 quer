00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000021Offene Posten A4 quer0000042013000004true000004true00000100000010000000006155' -----------------------------------------------------------------------------------------'' Formular : Offene Posten im Format A4 quer' Historie : 27.08.2007: Initialversion vs' Geändert : 27.08.2008: sts (Zwischensumme eingefügt)'            23.05.2013: sts (Spaltenbreite für Datum an langes Datumsformat angepasst)' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Offene Posten in " + App_GJWaehrung' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row          as number = 0dim summeOffen   as numberdim summeBezahlt as numberdim summeBrutto  as numberdim debitor      as boolean = (Position(OP_Filter, "Debitor", 1, 1) > 0)' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 10 Spaltendim anzahlSpalten as number = 10dim s1 as number = 0dim s2 as number = 100dim s3 as number = 290dim s4 as number = 650dim s5 as number = 850dim s6 as number = 1450dim s7 as number = 1700dim s8 as number = 1890dim s9 as number = 2130dim s10 as number = 2370dim s11 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(OP_Filter, 0, 150, LAYOUTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Offene Posten'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Offene Posten")DrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawText("Art", s1, 5, s2-s1, 40)DrawVerticalLine(s2)DrawText("Datum", l2-5, 5, b2+10, 40)DrawVerticalLine(s3)if(debitor)DrawText("Debitor", l3, 5, b3, 40)elseDrawText("Kreditor", l3, 5, b3, 40)endifDrawVerticalLine(s4)if(debitor)DrawText("Deb.-Konto", l4, 5, b4, 40)elseDrawText("Kred.-Konto", l4, 5, b4, 40)endifDrawVerticalLine(s5)DrawText("Buchungstext", l5, 5, b5, 300)DrawVerticalLine(s6)DrawText("Re.-Nr.", l6, 5, b6, 40)DrawVerticalLine(s7)DrawText("Fällig am", l7, 5, b7, 40)DrawVerticalLine(s8)DrawText("Brutto", l8, 5, b8, 40)DrawVerticalLine(s9)DrawText("Bezahlt", l9, 5, b9, 40)DrawVerticalLine(s10)DrawText("Offen", l10, 5, b10, 40)DrawVerticalLine(s11)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 9, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)if(OP_Art = OP_ReArt_DebiRechnung OR OP_Art = OP_ReArt_KrediRechnung)DrawText("RE", l1, 5, b1, 40, ALIGN_CENTER)elseif(OP_Art = OP_ReArt_DebiGutschrift OR OP_Art = OP_ReArt_KrediGutschrift)DrawText("GS", l1, 5, b1, 40, ALIGN_CENTER)elseDrawText("#WERT!", l1, 5, b1, 120, ALIGN_CENTER)endifDrawVerticalLine(s2)if ( DateToNumber(OP_Datum) > 0 )DrawText(DateToText(OP_Datum), l2, 5, b2, 40, ALIGN_CENTER)endifDrawVerticalLine(s3)DrawText(OP_AdrMatchcode, l3, 5, b3, 300)DrawVerticalLine(s4)DrawText(Format(OP_Personenkonto, FORMATKONTO), l4, 5, b4, 300, ALIGN_RIGHT)DrawVerticalLine(s5)DrawText(OP_BuText, l5, 5, b5, 300, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(OP_RechnungsNr, l6, 5, b6, 40, ALIGN_LEFT)DrawVerticalLine(s7)if ( DateToNumber(OP_FaelligNetto) > 0 )DrawText(DateToText(OP_FaelligNetto), l7, 5, b7, 40, ALIGN_CENTER)endifDrawVerticalLine(s8)DrawText(Format(OP_GesamtBruttoSW, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)set summeBrutto to summeBrutto + OP_GesamtBruttoSWDrawVerticalLine(s9)DrawText(Format(OP_BezahltSW, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)set summeBezahlt to summeBezahlt + OP_BezahltSWDrawVerticalLine(s10)DrawText(Format(OP_OffenSW, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)set summeOffen to summeOffen + OP_OffenSW'-------------------------------------------------------BeginTableBreak---#BeginTableBreak#include "STYLE Arial 8, fett"SetArea(42)DrawLine(s1, 0, s11, 0)DrawLine(s1, 0, s1, 40)DrawText("Zwischensumme", l1, 5, s8 - s6 - 20, 40)DrawLine(s8, 0, s8, 40)DrawText(Format(Round(summeBrutto*100)/100, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)DrawLine(s9, 0, s9, 40)DrawText(Format(Round(summeBezahlt*100)/100, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawLine(s10, 0, s10, 40)DrawText(Format(Round(summeOffen*100)/100, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawLine(s11, 0, s11, 40)DrawLine(s1, 40, s11, 40)#BeginTableFooter#include "STYLE Arial 8, fett"SetArea(42)DrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawText("Summe", l1, 5, s8 - s6 - 20, 40)DrawVerticalLine(s8)DrawText(Format(Round(summeBrutto*100)/100, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)DrawVerticalLine(s9)DrawText(Format(Round(summeBezahlt*100)/100, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(Round(summeOffen*100)/100, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)DrawLine(s1, 40, s11, 40)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Offene Posten'' -----------------------------------------------------------------------------------------0000012