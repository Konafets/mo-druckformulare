00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000020Artikelliste A4 quer0000043006000004true000004true00000100000010000058Ek und VK nach der Grundeinstellung in den Fakturavorgaben005279' -----------------------------------------------------------------------------------------'' Formular : Artikelliste im Format A4 quer (ausführlich)' Historie : 17/07/2007: Initialversion' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Artikelliste"' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 12 Spaltendim anzahlSpalten as number = 12dim s1 as number = 0dim s2 as number = 130dim s3 as number = 430dim s4 as number = 1010dim s5 as number = 1190dim s6 as number = 1330dim s7 as number = 1450dim s8 as number = 1580dim s9 as number = 1800dim s10 as number = 2020dim s11 as number = 2270dim s12 as number = 2500dim s13 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(Firma_Name, 0, 150, LAYOUTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Buchungsliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Artikelliste")DrawLine(s1, 0, s13, 0)DrawVerticalLine(s1)DrawText("Art", s1, 5, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Gruppe", l2, 5, b2, 160, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Bezeichnung", l3, 5, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Art.-Nr.", l4, 5, b4, 40, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("Einheit", l5, 5, b5, 80, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Anzahl", l6, 5, b6, 40, ALIGN_CENTER)DrawVerticalLine(s7)DrawText("Gewicht (kg)", l7, 5, b7, 80, ALIGN_CENTER)DrawVerticalLine(s8)if(Firma_FakturaIsBrutto)DrawText("Preis Einkauf Brutto", l8, 5, b8, 80, ALIGN_CENTER)elseDrawText("Preis Einkauf Netto", l8, 5, b8, 80, ALIGN_CENTER)endifDrawVerticalLine(s9)if(Firma_FakturaIsBrutto)DrawText("Preis Verkauf Brutto", l9, 5, b9, 80, ALIGN_CENTER)elseDrawText("Preis Verkauf Netto", l9, 5, b9, 80, ALIGN_CENTER)endifDrawVerticalLine(s10)DrawText("EAN-Code", l10, 5, b10, 80, ALIGN_CENTER)DrawVerticalLine(s11)DrawText("Hersteller", l11, 5, b11, 80, ALIGN_CENTER)DrawVerticalLine(s12)DrawText("Ge-  sperrt", l12, 5, b12, 80, ALIGN_CENTER)DrawVerticalLine(s13)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawVerticalLine(s1)DrawLine(s1, 0, s13, 0)DrawText(ART_ArtBezeichnung, l1, 5, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(ART_Artikelgruppe, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(ART_Bezeichnung, l3, 5, b3, 300, ALIGN_LEFT)DrawVerticalLine(s4)DrawText(ART_Artikelnummer, l4, 5, b4, 160, ALIGN_LEFT)DrawVerticalLine(s5)DrawText(ART_Einheit, l5, 5, b5, 160, ALIGN_CENTER)DrawVerticalLine(s6)DrawText(Format(ART_PreisProStkVK, FORMATBETRAGGANZ), l6, 5, b6, 80, ALIGN_RIGHT)DrawVerticalLine(s7)DrawText(Format(ART_GewichtKg, FORMATKILOLEER), l7, 5, b7, 40, ALIGN_RIGHT)DrawVerticalLine(s8)if(Firma_FakturaIsBrutto)DrawText(Format(ART_EKBrutto, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)elseDrawText(Format(ART_EKNetto, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)endifDrawVerticalLine(s9)if(Firma_FakturaIsBrutto)DrawText(Format(ART_VKBrutto, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)elseDrawText(Format(ART_VKNetto, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)endifDrawVerticalLine(s10)DrawText(ART_EAN_Code, l10, 5, b10, 160, ALIGN_LEFT)DrawVerticalLine(s11)DrawText(ART_Hersteller, l11, 5, b11, 300, ALIGN_LEFT)DrawVerticalLine(s12)if(ART_Gesperrt = true)DrawText("Ja", l12, 5, b12, 40, ALIGN_CENTER)elseDrawText("", l12, 5, b12, 40, ALIGN_CENTER)endifDrawVerticalLine(s13)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s13, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s13, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Buchungsliste'' -----------------------------------------------------------------------------------------0000012