00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000021Inventurliste A4 quer0000043009000004true000004true00000100000010000038Liste der Inventuren im Format A4 quer004208' -----------------------------------------------------------------------------------------'' Formular : Liste Inventuren im Format A4 quer'' Historie' 23/10/2018: sts (Initialversion)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL         as text   = "Liste Inventuren"const FORMATMENGE      as text   = "#." + Left("0000", Firma_FakturaNKMenge) + ";-" + "#." + Left("0000", Firma_FakturaNKMenge) + ";0." + Left("0000", Firma_FakturaNKMenge)' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 9 Spaltendim anzahlSpalten as number = 9dim s1 as number = 0dim s2 as number = 200dim s3 as number = 500dim s4 as number = 1450 '1600dim s5 as number = 1650 '1800dim s6 as number = 1850 '2000dim s7 as number = 2000dim s8 as number = 2150dim s9 as number = 2300dim s10 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(INVENTUR_Filter, 0, 150, LAYOUTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Inventurliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Inventurenliste")DrawLine(s1, 0, s10, 0)DrawVerticalLine(s1)DrawText("InventurNr", l1, 5, b1, 40)DrawVerticalLine(s2)DrawText("Status", l2, 5, b2, 40)DrawVerticalLine(s3)DrawText("Bezeichnung", l3, 5, b3, 40)DrawVerticalLine(s4)DrawText("Beginn", l4, 5, b4, 40)DrawVerticalLine(s5)DrawText("Ende", l5, 5, b5, 40)DrawVerticalLine(s6)DrawText("Artikelanzahl", l6, 5, s9 - s6, 40)DrawLine(s6, 40, s9, 40)DrawText("Gesamt", l6, 45, b6, 40)DrawLine(s7, 40, s7, 80)DrawText("Erledigt", l7, 45, b7, 40)DrawLine(s8, 40, s8, 80)DrawText("Offen", l8, 45, b8, 40)DrawVerticalLine(s9)DrawText("Bearbeiter", l9, 5, b9, 40)DrawVerticalLine(s10)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s10, 0)DrawVerticalLine(s1)DrawText(INVENTUR_BELEGNR, l1, 5, b1, 40)DrawVerticalLine(s2)DrawText(INVENTUR_STATUS, l2, 5, b2, 40)DrawVerticalLine(s3)DrawText(INVENTUR_BEZEICHNUNG, l3, 5, b3, 40)DrawVerticalLine(s4)DrawText(ShortDate(INVENTUR_BEGINN), l4, 5, b4, 40)DrawVerticalLine(s5)DrawText(ShortDate(INVENTUR_ENDE), l5, 5, b5, 40)DrawVerticalLine(s6)DrawText(Format(INVENTUR_ARTIKELANZAHL, FORMATMENGE), l6, 5, b6, 40)DrawVerticalLine(s7)DrawText(Format(INVENTUR_ARTIKELFERTIG, FORMATMENGE), l7, 5, b7, 40)DrawVerticalLine(s8)DrawText(Format(INVENTUR_ARTIKELOFFEN, FORMATMENGE), l8, 5, b8, 40)DrawVerticalLine(s9)DrawText(INVENTUR_BEARBEITER, l9, 5, b9, 40)DrawVerticalLine(s10)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s10, 0)#BeginTableFooter#include "STYLE Arial 8, fett"SetArea(42)DrawLine(s1, 0, s10, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Inventurenliste'' -----------------------------------------------------------------------------------------0000012