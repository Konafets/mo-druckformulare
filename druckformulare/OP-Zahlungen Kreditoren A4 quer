00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000031OP-Zahlungen Kreditoren A4 quer0000041007000004true000004true00000100000010000050OP-Zahlungen Kreditoren A4 quer in Standardwährung005363' -----------------------------------------------------------------------------------------'' Formular : OP-Zahlungen Kreditoren im Format A4 quer' Historie : 29.08.2007: Initialversion vs' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "OP-Zahlungen Kreditoren in " + App_GJWaehrung' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row            as number = 0dim summeZahlung   as numberdim summeMinderung as number' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 10 Spaltendim anzahlSpalten as number = 10dim s1 as number = 0dim s2 as number = 180dim s3 as number = 630dim s4 as number = 780dim s5 as number = 930dim s6 as number = 1250dim s7 as number = 1750dim s8 as number = 1900dim s9 as number = 2100dim s10 as number = 2350dim s11 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(KZ_ReArt_Filter, 0, 150, LAYOUTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'OP-Zahlungen Kreditoren'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("OP-Zahlungen Kreditoren")DrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawText("Datum", s1, 5, s2-s1, 40)DrawVerticalLine(s2)DrawText("Kreditor", l2-5, 5, b2+10, 40)DrawVerticalLine(s3)DrawText("Kred.-Ko.", l3, 5, b3, 40)DrawVerticalLine(s4)DrawText("Finanzko.", l4, 5, b4, 40)DrawVerticalLine(s5)DrawText("Re.-Nr.", l5, 5, b5, 300)DrawVerticalLine(s6)DrawText("Buchungstext", l6, 5, b6, 40)DrawVerticalLine(s7)DrawText("Währung", l7, 5, b7, 40)DrawVerticalLine(s8)DrawText("Zahlungsart", l8, 5, b8, 40)DrawVerticalLine(s9)DrawText("Zahlung", l9, 5, b9, 40)DrawVerticalLine(s10)DrawText("Minderung", l10, 5, b10, 40)DrawVerticalLine(s11)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawText(DateToText(KZ_Datum), l1, 5, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(KZ_AdrMatchcode, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(Format(KZ_Personenkonto, FORMATKONTO), l3, 5, b3, 70, ALIGN_RIGHT)DrawVerticalLine(s4)DrawText(Format(KZ_FinanzKonto, FORMATKONTO), l4, 5, b4, 40, ALIGN_RIGHT)DrawVerticalLine(s5)DrawText(KZ_RechnNr, l5, 5, b5, 300, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(KZ_BuText, l6, 5, b6, 300, ALIGN_LEFT)DrawVerticalLine(s7)DrawText(KZ_Waehrung, l7, 5, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)if(KZ_Zahlungsart = KZ_Zahlart_Keine)DrawText("Keine", l8, 5, b8, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Bar)DrawText("Bar", l8, 5, b8, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Lastschrift)DrawText("Lastschrift", l8, 5, b8, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Kreditkarte)DrawText("Kreditkarte", l8, 5, b8, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart= KZ_Zahlart_Ueberweisung)DrawText("Überweisung", l8, 5, b8, 40, ALIGN_CENTER)elseif(KZ_Zahlungsart = KZ_Zahlart_Scheck)DrawText("Scheck", l8, 5, b8, 40, ALIGN_CENTER)endifDrawVerticalLine(s9)DrawText(Format(KZ_GesamtZahlSW, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)set summeZahlung to summeZahlung + KZ_GesamtZahlSWDrawVerticalLine(s10)DrawText(Format(KZ_GesamtMindSW, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)set summeMinderung to summeMinderung + KZ_GesamtMindSWDrawVerticalLine(s11)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s11, 0)#BeginTableFooter#include "STYLE Arial 8, fett"SetArea(42)DrawLine(s1, 0, s11, 0)DrawVerticalLine(s1)DrawText("Summe", l1, 5, s8 - s6 - 20, 40)DrawVerticalLine(s9)DrawText(Format(summeZahlung, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(summeMinderung, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)DrawLine(s1, 40, s11, 40)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'OP-Zahlungen Kreditoren'' -----------------------------------------------------------------------------------------0000012