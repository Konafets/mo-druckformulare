RIGHT)DrawVerticalLine(s7)DrawText(UJ_Gegenkonto, l7, 5, b7, 40, ALIGN_RIGHT)DrawVerticalLine(s8)DrawText(Format(UJ_BetragSoll, FORMATBETRAGLEER), l8, 5, b8, 40, ALIGN_RIGHT)DrawVerticalLine(s9)DrawText(Format(UJ_BetragHaben, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(UJ_Steuersatz, l10, 5, b10, 160, ALIGN_CENTER)DrawVerticalLine(s11)DrawText(Format(UJ_Bemessung, FORMATBETRAGLEER), l11, 5, b11, 40, ALIGN_RIGHT)DrawVerticalLine(s12)DrawText(Format(UJ_Steuer, FORMATBETRAGLEER), l12, 5, b12, 40, ALIGN_RIGHT)DrawVerticalLine(s13)endif'PageBreak(KA_FolgendeZeilenart=KA_Kopfzeile)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(11)DrawLine(s1, 0, s13, 0)#BeginTableFooterSetArea(11)DrawLine(s1, 0, s13, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Umsatzsteuer-Journal'' -----------------------------------------------------------------------------------------0000012