alLine(s5)DrawText(KR_BuText, l5, 5, b5, 300, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(KR_RechnNr, l6, 5, b6, 70, ALIGN_LEFT)DrawVerticalLine(s7)DrawText(KR_Waehrung, l7, 5, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)DrawText(DateToText(KR_FaelligNetto), l8, 5, b8, 40, ALIGN_CENTER)DrawVerticalLine(s9)DrawText(Format(KR_GesamtBruttoFW, FORMATBETRAGLEER), l9, 5, b9, 40, ALIGN_RIGHT)DrawVerticalLine(s10)DrawText(Format(KR_BezahltFW, FORMATBETRAGLEER), l10, 5, b10, 40, ALIGN_RIGHT)DrawVerticalLine(s11)DrawText(Format(KR_OffenFW, FORMATBETRAGLEER), l11, 5, b11, 40, ALIGN_RIGHT)DrawVerticalLine(s12)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s12, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s12, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'OP-Kreditoren'' -----------------------------------------------------------------------------------------0000012