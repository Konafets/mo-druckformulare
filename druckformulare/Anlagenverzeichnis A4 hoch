------------' Beginn der Tabelle 'Anlagen'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(100)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Anlagen")DrawLine(s1, 0, s9, 0)DrawVerticalLine(s1)DrawText("Inventar-", s1, 5, b1, 80)DrawText("nummer", s1, 35, b1, 80)DrawVerticalLine(s2)DrawText("Bezeichnung", l2-5, 5, b2, 40)DrawVerticalLine(s3)DrawText("Serien-", l3, 5, b3, 80)DrawText("nummer", l3, 35, b3, 80)DrawVerticalLine(s4)DrawText("Zugangs-", l4, 5, b4, 80)DrawText("datum", l4, 35, b4, 80)DrawVerticalLine(s5)DrawText("Hist. AHK", l5, 5, b5, 80)DrawText("in Euro", l5, 35, b5, 80)DrawVerticalLine(s6)DrawText("ND in", l6, 5, b6, 80)DrawText("Monaten", l6, 35, b6, 80)DrawVerticalLine(s7)DrawText("Buchwert", l7, 5, b7, 80)DrawText("in Euro", l7, 35, b7, 80)DrawVerticalLine(s8)DrawText("Abgangs-", l8, 5, b8, 80)DrawText("datum", l8, 35, b8, 80)DrawVerticalLine(s9)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (not ANL_AnlagenPosition)if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s9, 0)DrawVerticalLine(s1)DrawText(ANL_SD_InventarNr, l1, 5, b1, 70)DrawVerticalLine(s2)DrawText(ANL_SD_Bezeichnung, l2, 5, b2, 300)DrawVerticalLine(s3)DrawText(ANL_SD_SerienNr, l3, 5, b3, 70)DrawVerticalLine(s4)DrawText(DateToText(ANL_ZU_Datum), l4, 5, b4, 70, ALIGN_CENTER)DrawVerticalLine(s5)DrawText(Format(ANL_JahrHistAHK, FORMATBETRAGLEER), l5, 5, b5, 40, ALIGN_RIGHT)DrawVerticalLine(s6)DrawText(Format(ANL_ZU_Nutzungsdauer, FORMATBETRAGGANZ), l6, 5, b6, 40, ALIGN_RIGHT)DrawVerticalLine(s7)DrawText(Format(ANL_JahrBuchwertEnde, FORMATBETRAGLEER), l7, 5, b7, 40, ALIGN_RIGHT)DrawVerticalLine(s8)DrawText(IfThen(DateToNumber(ANL_AB_Datum)=0, "", DateToText(ANL_AB_Datum)), l8, 5, b8, 70, ALIGN_CENTER)DrawVerticalLine(s9)endif'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s9, 0)#BeginTableFooterSetArea(42)DrawLine(s1, 0, s9, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Anlagen'' -----------------------------------------------------------------------------------------0000011