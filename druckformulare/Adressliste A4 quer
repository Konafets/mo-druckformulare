00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000019Adressliste A4 quer0000041003000004true000004true00000100000010000044Adressliste A4 quer ausführliche Darstellung005380' -----------------------------------------------------------------------------------------'' Formular : Adressen im Format A4 quer' Historie : 14/08/2007: Initialversion vs' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Adressliste"' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 11 Spaltendim anzahlSpalten as number = 11dim s1 as number = 0dim s2 as number = 200dim s3 as number = 400dim s4 as number = 800dim s5 as number = 1100dim s6 as number = 1350dim s7 as number = 1600dim s8 as number = 2000dim s9 as number = 2160dim s10 as number = 2360dim s11 as number = 2480dim s12 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Adressliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Adressliste")DrawLine(s1, 0, s12, 0)DrawVerticalLine(s1)DrawText("Adr-Nr.", s1, 10, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Matchcode", l2, 10, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Firma", l3, 10, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Name", l4, 10, b4, 40, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("Telefon", l5, 10, b5, 40, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Telefax", l6, 10, b6, 40, ALIGN_CENTER)DrawVerticalLine(s7)DrawText("Adresse", l7, 10, b7, 40, ALIGN_CENTER)DrawVerticalLine(s8)DrawText("Kunden-status", l8, 10, b8, 80, ALIGN_CENTER)DrawVerticalLine(s9)DrawText("Lieferanten-status", l9, 10, b9, 80, ALIGN_CENTER)DrawVerticalLine(s10)DrawText("Debi.-Konto", l10, 10, b10, 80, ALIGN_CENTER)DrawVerticalLine(s11)DrawText("Kredi.-Konto", l11, 10, b11, 80, ALIGN_CENTER)DrawVerticalLine(s12)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s12, 0)DrawVerticalLine(s1)DrawText(ADR_AdressNr, l1, 5, b1, 40, ALIGN_LEFT)DrawVerticalLine(s2)DrawText(ADR_Matchcode, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(ADR_RA_Firma1, l3, 5, b3, 300, ALIGN_LEFT)DrawVerticalLine(s4)DrawText(ADR_RA_Vorname + " " + ADR_RA_Nachname, l4, 5, b4, 300, ALIGN_LEFT)DrawVerticalLine(s5)DrawText(ADR_RA_Telefon1 + Chr(13) + ADR_RA_Telefon2 + Chr(13) + ADR_RA_Telefon3, l5, 5, b5, 300, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(ADR_RA_Telefax, l6, 5, b6, 300, ALIGN_LEFT)DrawVerticalLine(s7)DrawText(ADR_RA_Plz + " " + ADR_RA_Ort + Chr(13) + ADR_RA_Strasse + " " + ADR_RA_StrasseNr, l7, 5, b7, 300, ALIGN_LEFT)DrawVerticalLine(s8)if(ADR_Kunde_Status = ADR_InaktiverKunde)DrawText("Inaktiver Kunde", l8, 5, b8, 80, ALIGN_CENTER)elseif(ADR_Kunde_Status = ADR_AktiverKunde)DrawText("Aktiver Kunde", l8, 5, b8, 80, ALIGN_CENTER)elseif(ADR_Kunde_Status = ADR_GesperrterKunde)DrawText("Gesperrter Kunde", l8, 5, b8, 80, ALIGN_CENTER)elseif(ADR_Kunde_Status = ADR_KeinKunde)DrawText("Kein Kunde", l8, 5, b8, 80, ALIGN_CENTER)endifDrawVerticalLine(s9)if(ADR_Lieferant_Status = ADR_InaktiverLieferant)DrawText("Inaktiver Lieferant", l9, 5, b9, 80, ALIGN_CENTER)elseif(ADR_Lieferant_Status = ADR_AktiverLieferant)DrawText("Aktiver Lieferant", l9, 5, b9, 80, ALIGN_CENTER)elseif(ADR_Lieferant_Status = ADR_GesperrterLieferant)DrawText("Gesperrter Lieferant", l9, 5, b9, 80, ALIGN_CENTER)elseif(ADR_Lieferant_Status = ADR_KeinLieferant)DrawText("Kein Lieferant", l9, 5, b9, 80, ALIGN_CENTER)endifDrawVerticalLine(s10)DrawText(FORMAT(ADR_Kunde_Konto, FORMATKONTOLEER), l10, 5, b10, 300, ALIGN_LEFT)DrawVerticalLine(s11)DrawText(FORMAT(ADR_Lieferant_Konto, FORMATKONTOLEER), l11, 5, b11, 300, ALIGN_LEFT)DrawVerticalLine(s12)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s12, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s12, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Adressliste'' -----------------------------------------------------------------------------------------0000012