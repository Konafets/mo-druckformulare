00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000031Vordruck Überweisung Österreich0000041010000004true000004true00000120000010000063Formular zum Ausdruck auf Vordruck Überweisung mit IBAN und BIC004615'-----------------------------------------------------------------------------------------'' Formular : Vordruck Überweisung Österreich'' Historie' 10/04/2014: mm:Initialversion''-----------------------------------------------------------------------------------------#BeginDocument'-----------------------------------------------------------------------------------------SetDocument(0, 0, 0, 0)                                'Seitenränder definieren'-----------------------------------------------------------------------------------------' Konstanten für die korrekte Positionierung bei der Druckausgabe, Angaben in Zehntelmillimeternconst X as number = 280      ' horizontale Verschiebungconst Y as number = 90      ' vertikale Verschiebung' Ausgabe zu hoch        Erhöhen Sie den Y-Wert um 20, wenn es 2 mm zu hoch ist' Ausgabe zu tief        Vermindern Sie den Y-Wert um 20, wenn es 2 mm zu tief ist' Ausgabe zu weit links  Erhöhen Sie den X-Wert um 20, wenn es 2 mm zu weit links ist' Ausgabe zu weit rechts Vermindern Sie den X-Wert um 20, wenn es 2 mm zu weit rechts ist'-----------------------------------------------------------------------------------------' Konstanten definieren' Allgemeine Konstantenconst LAYOUTLEFT       as number = 70const LAYOUTWIDTH      as number = 1420const BLACK            as color  = RGBColor(0,0,0)const FORMATBETRAGLEER as text   = "#0.00"const FORMATREFNR      as text   = "#0000000000;"const MSPACE           as number = 40                      ' Laufweitenangabe für Monospace Text' Belegarten' SEPA_UEBERWEISUNG as number = 4' Variablen definierendim hoehe              as numberdim starthoehe         as numberdim breite             as numberdim zh                 as numberdim kontoinhaber       as textdim beguenstigter      as textdim verwendungszweck   as text' Startwerte (X-Positionen) der Spalten in den Belegendim anzahlSpalten as number = 2dim s1 as number = LAYOUTLEFT + Xdim s2 as number = LAYOUTLEFT + X + 970dim s3 as number = LAYOUTLEFT + X + LAYOUTWIDTH' Hier werden die Variablen für die Spaltenbreiten und Innenabstände der Positionstabelle initialisiert#include "TEMPLATE Table"' -----------------------------------------------------------------------------------------' Prüfung Belegart' -----------------------------------------------------------------------------------------if (ZA_TransferArt <> 4)beepmsgBox("Der ausgewählte Zahlungsauftrag ist keine Überweisung, die Verarbeitung wird abgebrochen.")exitendif' -----------------------------------------------------------------------------------------' Beginn Kopfbereich (Platzhalter für nachfolgende Bereiche)' -----------------------------------------------------------------------------------------#BeginHeader'SetArea(10)' -----------------------------------------------------------------------------------------' Beginn Briefpapier (Hintergrund) nur für Testzwecke' -----------------------------------------------------------------------------------------#BeginBackground'DrawPicture("Ueberweisung.jpg",X,Y)' -----------------------------------------------------------------------------------------' Beginn Bankbeleg und Kundenbeleg' -----------------------------------------------------------------------------------------#BeginGraphicsTextSetArea(2000)#include "STYLE Arial 9, normal"set hoehe to 0set zh to 40                                                             ' Zeilenhöhe für Quittungset hoehe to 130 + yDrawTextMonospace(ZA_FremdkontoInhaber, s1, hoehe, s3 - s1, zh, MSPACE)set hoehe to 210 + yDrawTextMonospace(ZA_FremdkontoIban, s1, hoehe, s3 - s1, zh, MSPACE)DrawText("+", s1 + 1375, hoehe, 50, zh)set hoehe to 290 + yDrawTextMonospace(ZA_FremdkontoBic_Digital, s1, hoehe, 450, zh, MSPACE)DrawTextMonospace(Format(ZA_BetragZahlungFW,FORMATBETRAGLEER), s2, hoehe, s3 - s2, zh, MSPACE, ALIGN_RIGHT)set hoehe to 340 + yDrawText("Verwendungszweck", s1, hoehe, 450, zh)DrawText("+", s1 + 1375, hoehe, 50, zh)set hoehe to 460 + yDrawTextMonospace(ZA_Verwendungszweck1, s1, hoehe, s3 - s1 + 50, zh, MSPACE)set hoehe to 550 + yDrawTextMonospace(ZA_Verwendungszweck2, s1, hoehe, s3 - s1 + 50, zh, MSPACE)set hoehe to 630 + yDrawTextMonospace(ZA_EigenkontoIban_Digital, s1, hoehe, s3 - s1, zh, MSPACE)set hoehe to 730 + yDrawTextMonospace(ZA_EigenkontoInhaber, s1, hoehe, s3 - s1 + 50, zh, MSPACE)set hoehe to 850 + yDrawText("+", s1, hoehe, 50, zh)DrawText(Format(Round(ZA_BetragZahlungFW*100),"00000000000") + "<", s2, hoehe, 300, zh)DrawText("30+", s2+320, hoehe, 100, zh)0000011