00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000022SEPA-Infoblatt A4 quer0000041018000004true000004true00000100000010000072Informationen zu den übergebenen SEPA-Zahlungsaufträgen im A4 Querformat005115' -----------------------------------------------------------------------------------------'' Formular : SEPA-Zahlungsdaten im Format A4 quer' Historie : 25/02/2014: Initialversion sts' Geändert : 10.03.2014 mm'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "SEPA-Infoblatt in " + Firma_StdCurrencyISO' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 7 Spaltendim anzahlSpalten as number = 7dim s1 as number = 0dim s2 as number = 180dim s3 as number = 360dim s4 as number = 540dim s5 as number = 1150dim s6 as number = 1500dim s7 as number = 2400dim s8 as number = LAYOUTWIDTH#include "TEMPLATE Table"' allgemeine Variablendim hoehe      as numberdim links1     as numberdim links2     as numberdim breite     as numberdim zab        as numberdim semaArt   as text = Case(SeMa_Art = SeMa_Art_Basislastschrift, "Basislastschrift", SeMa_Art = SeMa_Art_Firmenlastschrift, "Firmenlastschrift", "")'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' Eigenes Bankkonto#BeginGraphicsTextSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 9, normal"set hoehe to 0set zab to 45set breite to 350set links1 to 0set links2 to links1 + breiteif ( EigenkontoBank <> "" )DrawText("Eigenkonto Bank:", links1, hoehe, breite, 40)DrawText(EigenkontoBank, links2, hoehe, 800, 40)set hoehe to hoehe + zabendifDrawText("Eigenkonto IBAN:", links1, hoehe, breite, 40)DrawText(EigenkontoIban, links2, hoehe, 800, 40)set hoehe to hoehe + zabDrawText("Eigenkonto BIC:", links1, hoehe, breite, 40)DrawText(EigenkontoBic, links2, hoehe, 800, 40)set hoehe to hoehe + zabDrawText("Eigenkonto Inhaber:", links1, hoehe, breite, 40)DrawText(EigenkontoInhaber, links2, hoehe, 800, 40)set hoehe to 0set breite to 350set links1 to 1200set links2 to links1 + breiteDrawText("SEPA-Auftragsart:", links1, hoehe, breite, 40)DrawText(Auftragsart, links2, hoehe, LAYOUTWIDTH - links2, 40)set hoehe to hoehe + zabDrawText("SEPA-Mandatsart:", links1, hoehe, breite, 40)DrawText(semaArt, links2, hoehe, LAYOUTWIDTH - links2, 40)' Platzhalter zur Tabelle#BeginGraphicsTextSetArea(100)#include "STYLE Arial 9, normal"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Zahlungsdaten'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Zahlungsdaten")DrawLine(s1, 0, s8, 0)DrawVerticalLine(s1)DrawText("Angelegt", s1, 10, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Geplant", l2, 10, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Ausgeführt", l3, 10, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Fremdkonto", l4, 10, b4, 40, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("SEPA-Mandat", l5, 10, b5, 80, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Verwendungszweck", l6, 10, b6, 80, ALIGN_CENTER)DrawVerticalLine(s7)DrawText("Zahlbetrag", l7, 10, b7, 80, ALIGN_CENTER)DrawVerticalLine(s8)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"set hoehe to 5DrawLine(s1, 0, s8, 0)DrawVerticalLine(s1)DrawText(IfThen(DateToNumber(AngelegtAm) > 0, ShortDate(AngelegtAm), ""), l1, hoehe, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(IfThen(DateToNumber(GeplantAm) > 0, ShortDate(GeplantAm), ""), l2, hoehe, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText(IfThen(DateToNumber(AusgeführtAm) > 0, ShortDate(AusgeführtAm), ""), l3, hoehe, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)if ( FremdkontoBank <> "" )DrawText(FremdkontoBank, l4, hoehe, b4, 40, ALIGN_LEFT)set hoehe to AREA_CURRENTHEIGHT + 10endifDrawText("IBAN: " + FremdkontoIban, l4, hoehe, b4, 40, ALIGN_LEFT)set hoehe to hoehe + 40DrawText("BIC: " + FremdkontoBic, l4, hoehe, b4, 40, ALIGN_LEFT)set hoehe to hoehe + 40DrawText("Inhaber: " + FremdkontoInhaber, l4, hoehe, b4, 40, ALIGN_LEFT)set hoehe to 5DrawVerticalLine(s5)DrawText(SepaMandat, l5, hoehe, b5, 40, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(Verwendungszweck, l6, hoehe, b6, 300, ALIGN_LEFT)DrawVerticalLine(s7)DrawText(Format(Zahlbetrag, "#.00"), l7, hoehe, b7, 40, ALIGN_RIGHT)DrawVerticalLine(s8)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s8, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s8, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Zahlungsdaten'' -----------------------------------------------------------------------------------------0000012