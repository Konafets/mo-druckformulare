00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000018Preisliste A4 hoch0000043006000004true000004true00000100000010000084Preisliste unter Berücksichtigung der Artikeloptionen 'In Preisliste' und 'Gesperrt'003877' -----------------------------------------------------------------------------------------'' Formular : Preisliste im Format A4 hoch' Historie : 23.01.2008: Initialversion vs' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Preisliste in " + App_GJWaehrung' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 hoch"' Variablen für die Positionen der 6 Spaltendim anzahlSpalten as number = 6dim s1 as number = 0dim s2 as number = 200dim s3 as number = 800dim s4 as number = 1150dim s5 as number = 1350dim s6 as number = 1550dim s7 as number = LAYOUTWIDTH#include "TEMPLATE Table"'---------------------------------------------------------BeginHeader--------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(Firma_Name, 0, 150, LAYOUTWIDTH, 50)'----------------------------------------------------------BeginFooter--------#BeginFooter#include "TEMPLATE BeginFooter A4"' -----------------------------------------------------------------------------------------' Beginn der Tabelle 'Preisliste'' -----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(40)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Artikelliste")DrawLine(s1, 0, s7, 0)DrawVerticalLine(s1)DrawText("Art.-Nr.", s1, 5, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Bezeichnung", l2, 5, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Hersteller", l3, 5, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Preis Netto", l4, 5, b4, 40, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("Steuerbetrag", l5, 5, b6, 40, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Preis Brutto", l6, 5, b6, 80, ALIGN_CENTER)DrawVerticalLine(s7)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifif (ART_InPreisliste = true AND ART_Gesperrt = false)DrawVerticalLine(s1)DrawLine(s1, 0, s7, 0)DrawText(ART_Artikelnummer, l1, 5, b1, 160, ALIGN_LEFT)DrawVerticalLine(s2)DrawText(ART_Bezeichnung, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(ART_Hersteller, l3, 5, b3, 300, ALIGN_LEFT)DrawVerticalLine(s4)DrawText(Format(ART_VKNetto, FORMATBETRAGLEER), l4, 5, b4, 40, ALIGN_RIGHT)DrawVerticalLine(s5)'DrawText(Format(ART_VKNetto / ART_VKSteuer, FORMATBETRAGLEER), l5, 5, b5, 160, ALIGN_CENTER)DrawVerticalLine(s6)DrawText(Format(ART_VKSteuer, FORMATBETRAGLEER), l5, 5, b5, 80, ALIGN_RIGHT)DrawVerticalLine(s7)DrawText(Format(ART_VKBrutto, FORMATBETRAGLEER), l6, 5, b6, 40, ALIGN_RIGHT)DrawVerticalLine(s7)elseendif'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s7, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s7, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Preisliste'' -----------------------------------------------------------------------------------------0000011