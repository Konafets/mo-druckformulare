----------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Kontenplan")DrawLine(s1, 0, s7, 0)DrawVerticalLine(s1)DrawText("Konto", s1, 5, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Bezeichnung", l2, 5, b2, 160, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Steuer-typ", l3, 5, b3, 80, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Steuersatz", l4, 5, b4, 80, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("UVA-Kennzeichen", l5, 5, b5, 80, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Bemerkung", l6, 5, b6, 40, ALIGN_CENTER)DrawVerticalLine(s7)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawVerticalLine(s1)DrawLine(s1, 0, s7, 0)DrawText(Format(KP_Konto, FORMATKONTO), l1, 5, b1, 40, ALIGN_RIGHT)DrawVerticalLine(s2)DrawText(KP_Bezeichnung, l2, 5, b2, 160, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(KP_Steuertyp, l3, 5, b3, 160, ALIGN_CENTER)DrawVerticalLine(s4)DrawText(KP_Steuersatz, l4, 5, b4, 160, ALIGN_CENTER)DrawVerticalLine(s5)DrawText(KP_UVAKennzeichen, l5, 5, b5, 40, ALIGN_CENTER)DrawVerticalLine(s6)DrawText(KP_Bemerkung, l6, 5, b6, 160, ALIGN_LEFT)DrawVerticalLine(s7)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s7, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s7, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Buchungsliste'' -----------------------------------------------------------------------------------------0000011