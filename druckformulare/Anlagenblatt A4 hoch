ER)SetTextSize(8)SetTextBold(true)DrawRect(s1, r1, s10-s1, 550)DrawText("Inventar-Nr.:", s11, r1+10, b11, 40)DrawText("Bezeichnung:", s11, r1+60, b11, 40)DrawText("Standort:", s11,r1+110, b11, 40)DrawText("Serien-Nr.:", s11,r1+160, b11, 40)DrawText("Kostenstelle:", s11,r1+210, b11, 40)DrawText("Anlagen-Konto:", s11,r1+260, b11, 40)DrawText("Afa-Konto:", s11,r1+310, b11, 40)DrawText("Zusatzangaben:", s11,r1+360, b11, 180)DrawRect(s1, r2, s10-s1, 440)DrawText("Datum:", s11, r2+10, b11, 40)DrawText("Anschaffungskosten:", s11, r2+60, b11, 40)DrawText("Nutzungsdauer:", s11, r2+110, b11, 40)DrawText("Erinnerungswert:", s11, r2+160, b11, 40)DrawText("Verrechnungs-Konto:", s11, r2+210, b11, 40)DrawText("Afa-Beginn-Datum:", s11, r2+260, b11, 40)DrawText("Afa-Methode:", s11, r2+310, b11, 40)DrawText("Prozent:", s13, r2+310, b13, 40)DrawText("Wechsel:", s15, r2+310, b15, 40)DrawText("Sonder-AfA-", s11, r2+360, b11 + b12, 40)DrawText("Begünstigungszeitraum:", s11, r2+390, b11 + b12, 40)DrawRect(s1, r3, s10-s1, 310)DrawText("Abgangsdatum:", s11, r3+10, b11, 40)DrawText("Abgangs-Konto:", s11, r3+60, b11, 40)DrawText("mit Verkauf:", s11, r3+110, b11, 40)DrawText("VK-Netto:", s11, r3+160, b11, 40)DrawText("Erlöskonto:", s11, r3+210, b11, 40)DrawText("Verrechnungskonto:", s11, r3+260, b11, 40)SetTextBold(false)DrawText(ANL_SD_InventarNr, s12, r1+10, b12, 40)DrawText(ANL_SD_Bezeichnung, s12, r1+60, b12, 40)DrawText(ANL_SD_Standort, s12,r1+110, b12, 40)DrawText(ANL_SD_SerienNr, s12,r1+160, b12, 40)DrawText(ANL_SD_Kostenstelle, s12,r1+210, b12, 40)DrawText(Format(ANL_SD_KontoAnlage, FORMATKONTOLEER), s12,r1+260, b12, 40)DrawText(Format(ANL_SD_KontoAfa, FORMATKONTOLEER), s12,r1+310, b12, 40)DrawText(ANL_SD_ZusatzAngaben, s12,r1+360, b12, 180)DrawText(DateToText(ANL_ZU_Datum), s12, r2+10, b12, 40)DrawText(Format(ANL_ZU_AHKosten, FORMATBETRAGLEER), s12, r2+60, b12, 40)DrawText(Format(ANL_ZU_Nutzungsdauer, "0") + IfThen(ANL_ZU_Nutzungsdauer > 1, " Monate", " Monat"), s12, r2+110, b12, 40)DrawText(Format(ANL_ZU_Restwert, FORMATBETRAGNULL), s12, r2+160, b12, 40)DrawText(Format(ANL_ZU_KontoVerrech, FORMATKONTOLEER), s12, r2+210, b12, 40)DrawText(DateToText(ANL_ZU_AfaBeginnDatum), s12, r2+260, b12, 40)if(ANL_ZU_AfaMethode = ANL_AFAART_KEINE)DrawText("", s12, r2+310, 300, 40)elseif(ANL_ZU_AfaMethode = ANL_AFAART_LINEAR)DrawText("LIN", s12, r2+310, 300, 40)elseif(ANL_ZU_AfaMethode = ANL_AFAART_DEGRESSIV)if (ANL_ZU_AfaWechsel)DrawText("D/L", s12, r2+310, 300, 40)elseDrawText("DEG", s12, r2+310, 300, 40)endifelseif(ANL_ZU_AfaMethode = ANL_AFAART_GWG)DrawText("GWG", s12, r2+310, 300, 40)elseif (ANL_ZU_AfaMethode = ANL_AFAART_GWG_SP)DrawText("GWG-SP", s12, r2+310, 300, 40)elseDrawText("#WERT!", s12, r2+310, 300, 40)endifDrawText(Format(ANL_ZU_AfaSatz, "0.00\%;-0.00\%;"), s14, r2+310, 300, 40)DrawText(IfThen(ANL_ZU_AfaWechsel, "Ja", "Nein"), s16, r2+310, 300, 40)if ( ANL_ZU_SAfaZeitraum > 0 )DrawText(Format(ANL_ZU_SAfaZeitraum, "0") + IfThen(ANL_ZU_Nutzungsdauer > 1, " Jahre", " Jahr"), s12, r2+390, b12, 40)endifDrawText(IfThen(DateToNumber(ANL_AB_Datum)=0, "", DateToText(ANL_AB_Datum)), s12, r3+10, b12, 40)DrawText(Format(ANL_AB_KontoAbgang, FORMATKONTOLEER), s12, r3+60, b12, 40)DrawText(IfThen(ANL_AB_Verkauf, "Ja", "Nein"), s12, r3+110, b12, 40)DrawText(Format(ANL_AB_Verkaufspreis, FORMATBETRAGLEER), s12, r3+160, b12, 40)DrawText(Format(ANL_AB_KontoVerkauf, FORMATKONTOLEER), s12, r3+210, b12, 40)DrawText(Format(ANL_AB_KontoVerrech, FORMATKONTOLEER), s12, r3+260, b12, 40)'------------------------------------Tabellenbeginn------------------------------------DrawLine(s1, r4, s10, r4)DrawLine(s1, r4, s1, r4+80)DrawLine(s1, r4, s1, r4+80)DrawLine(s2, r4, s2, r4+80)DrawLine(s3, r4, s3, r4+80)DrawLine(s4, r4, s4, r4+80)DrawLine(s5, r4, s5, r4+80)DrawLine(s6, r4, s6, r4+80)DrawLine(s7, r4, s7, r4+80)DrawLine(s8, r4, s8, r4+80)DrawLine(s9, r4, s9, r4+80)DrawLine(s10, r4, s10, r4+80)SetTextBold(true)DrawText("Datum", l1,r4+10, b1, 40, ALIGN_CENTER)DrawText("Zugang", l2,r4+10, b2, 40, ALIGN_CENTER)DrawText("AfA", l3,r4+10, b3, 40, ALIGN_CENTER)DrawText("Bemessung", l4,r4+10, b4, 40, ALIGN_CENTER)DrawText("%", l5,r4+10, b5, 40, ALIGN_CENTER)DrawText("Buchwert", l6,r4+10, b6, 40, ALIGN_CENTER)DrawText("H", l7,r4+10, b7, 40, ALIGN_CENTER)DrawText("G", l8,r4+10, b8, 40, ALIGN_CENTER)DrawText("Vorgang", l9,r4+10, b9, 40, ALIGN_CENTER)elseSetTextBold(false)SetTextSize(8)DrawLine(s1, 0, s10, 0)DrawVerticalLine(s1)DrawText(DateToText(ANL_ZU_AfaBeginnDatum), l1, 0, b1, 45, ALIGN_RIGHT)DrawVerticalLine(s2)DrawText(Format(ANL_JahrHistAHK, FORMATBETRAGLEER), l2, 0, b2, 45, ALIGN_RIGHT)DrawVerticalLine(s3)DrawText(Format(ANL_JahrAfA, FORMATBETRAGLEER), l3, 0, b3, 45, ALIGN_RIGHT)DrawVerticalLine(s4)DrawText(Format(ANL_JahrBemessung, FORMATBETRAGLEER), l4, 0, b4, 45, ALIGN_RIGHT)DrawVerticalLine(s5)DrawText(Format(ANL_JahrProzent, "0.00;-0.00;"), l5, 0, b5, 45, ALIGN_RIGHT)DrawVerticalLine(s6)DrawText(Format(ANL_JahrBuchwertEnde, FORMATBETRAGLEER), l6, 0, b6, 45, ALIGN_RIGHT)DrawVerticalLine(s7)DrawText(IfThen(ANL_JahrHistorisch, "*", ""), l7, 0, b7, 45, ALIGN_CENTER)DrawVerticalLine(s8)DrawText(IfThen(ANL_JahrGebucht, "*", ""), l8, 0, b8, 45, ALIGN_CENTER)DrawVerticalLine(s9)DrawText(ANL_JahrVorgang, l9, 0, b9, 300)DrawVerticalLine(s10)endif#BeginTableBreakSetArea(10)DrawLine(s1, 0, s10, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s10, 0)#BeginFooter#include "TEMPLATE BeginFooter A4"0000011