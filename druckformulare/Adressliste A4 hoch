#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Adressliste")DrawLine(s1, 0, s7, 0)DrawVerticalLine(s1)DrawText("Adr-Nr.", s1, 10, s2-s1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText("Matchcode", l2, 10, b2, 40, ALIGN_CENTER)DrawVerticalLine(s3)DrawText("Firma", l3, 10, b3, 40, ALIGN_CENTER)DrawVerticalLine(s4)DrawText("Name", l4, 10, b4, 40, ALIGN_CENTER)DrawVerticalLine(s5)DrawText("Vorname", l5, 10, b5, 40, ALIGN_CENTER)DrawVerticalLine(s6)DrawText("Telefon", l6, 10, b6, 40, ALIGN_CENTER)DrawVerticalLine(s7)'---------------------------------------------------------BeginTableRow-----#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s7, 0)DrawVerticalLine(s1)DrawText(ADR_AdressNr, l1, 5, b1, 40, ALIGN_LEFT)DrawVerticalLine(s2)DrawText(ADR_Matchcode, l2, 5, b2, 300, ALIGN_LEFT)DrawVerticalLine(s3)DrawText(ADR_RA_Firma1, l3, 5, b3, 300, ALIGN_LEFT)DrawVerticalLine(s4)DrawText(ADR_RA_Nachname, l4, 5, b4, 300, ALIGN_LEFT)DrawVerticalLine(s5)DrawText(ADR_RA_Vorname, l5, 5, b5, 300, ALIGN_LEFT)DrawVerticalLine(s6)DrawText(ADR_RA_Telefon1, l6, 5, b6, 300, ALIGN_LEFT)DrawVerticalLine(s7)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s7, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s7, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Adressliste'' -----------------------------------------------------------------------------------------0000011