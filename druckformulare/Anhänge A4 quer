00068000003000022MonKey Bilanz Formular00001917.2.3 (Build 1726)000003002000009000015Anhänge A4 quer0000042029000004true000004true00000100000010000035Liste der Anhänge im Format A4 quer003704'-----------------------------------------------------------------------------------------'' Formular : Liste der Anhänge Format A4 quer' Historie : 15/06/2015: Initialversion' Geändert : 21.12.2016: hb  (Alternierender Zeilenhintergrund über Schalter "ALT_ZEILENHINTERGRUND" möglich)'' -----------------------------------------------------------------------------------------#BeginDocument' Globale Konstanten definierenconst DOCTITEL as text = "Liste der Anhänge "' ********************************************************************************' Über die folgenden Konstante lässt sich die Darstellung einer alternierenden' Hintergrundfarbe einstellen (TRUE = Element sichtbar, FALSE = Element nicht sichtbar)const ALT_ZEILENHINTERGRUND as boolean = FALSE' ********************************************************************************' Variablen definierendim row       as number = 0' Templates für Randeinstellungen, Kopf- und Fusszeilen#include "TEMPLATE BeginDocument A4 quer"' Variablen für die Positionen der 7 Spaltendim anzahlSpalten as number = 7dim s1 as number = 0dim s2 as number = 150dim s3 as number = 750dim s4 as number = 1250dim s5 as number = 1400dim s6 as number = 1700dim s7 as number = 2500dim s8 as number = LAYOUTWIDTH#include "TEMPLATE Table"'-----------------------------------------------------------------------------------------#BeginHeader#include "TEMPLATE BeginHeader A4"DrawText(ATTM_Filter, 0, 150, LAYOUTWIDTH, 50)'-----------------------------------------------------------------------------------------#BeginFooter#include "TEMPLATE BeginFooter A4"'-----------------------------------------------------------------------------------------' Beginn der Tabelle 'Anhangsliste''-----------------------------------------------------------------------------------------#BeginTableHeaderSetArea(80)#include "STYLE Arial 8, fett"SetTextAlignment(ALIGN_CENTER)SetCurrentTable("Anhänge")DrawLine(s1, 0, s8, 0)DrawVerticalLine(s1)DrawText("Hinzu-gefügt", s1, 5, s2-s1, 80)DrawVerticalLine(s2)DrawText("Name", l2, 5, b2, 40)DrawVerticalLine(s3)DrawText("Art", l3, 5, b3, 40)DrawVerticalLine(s4)DrawText("Größe", l4, 5, b4, 40)DrawVerticalLine(s5)DrawText("Bereich", l5, 5, b5, 40)DrawVerticalLine(s6)DrawText("Notizen", l6, 5, b6, 40)DrawVerticalLine(s7)DrawText("Ge- sperrt", l7, 5, b7, 80)DrawVerticalLine(s8)'-----------------------------------------------------------------------------------------#BeginTableRowSetArea(300, AREA_AUTOSIZE)#include "STYLE Arial 8, normal"if (ALT_ZEILENHINTERGRUND)SetFillColor(RGBColor(230, 230, 230))set row to row + 1if ( Mod(row, 2) = 1 )FillAreaVertical(0, LAYOUTWIDTH)endifendifDrawLine(s1, 0, s8, 0)DrawVerticalLine(s1)DrawText(ATTM_Hinzugefuegt, l1, 5, b1, 40, ALIGN_CENTER)DrawVerticalLine(s2)DrawText(ATTM_Name, l2, 5, b2, 300)DrawVerticalLine(s3)DrawText(ATTM_Art, l3, 5, b3, 300)DrawVerticalLine(s4)DrawText(ATTM_Groesse, l4, 5, b4, 300, ALIGN_RIGHT)DrawVerticalLine(s5)DrawText(ATTM_Bereich, l5, 5, b5, 40)DrawVerticalLine(s6)DrawText(ATTM_Notizen, l6, 5, b6, 40)DrawVerticalLine(s7)if(ATTM_Gesperrt = true)DrawText("Ja", l7, 5, b7, 40, ALIGN_CENTER)elseDrawText("", l7, 5, b7, 40, ALIGN_CENTER)endifDrawVerticalLine(s8)'-------------------------------------------------------BeginTableBreak---#BeginTableBreakSetArea(10)DrawLine(s1, 0, s8, 0)#BeginTableFooterSetArea(10)DrawLine(s1, 0, s8, 0)' -----------------------------------------------------------------------------------------' Ende der Tabelle 'Anhangsliste'' -----------------------------------------------------------------------------------------0000012